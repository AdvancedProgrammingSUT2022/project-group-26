            </HBox>
            <HBox id="row" layoutX="10.0" layoutY="246.0" onMouseClicked="#openChat" prefHeight="55.0" prefWidth="250.0" spacing="5.0">
                <padding>
                    <Insets bottom="2.0" left="10.0" top="2.0" />
                </padding>
                <children>
                    <ImageView id="icon" fitWidth="22" pickOnBounds="true" preserveRatio="true">
                        <HBox.margin>
                            <Insets top="5.0" />
                        </HBox.margin>
                        <image>
                            <Image url="@../Image/Menu/Icon/menuIcon.png" />
                        </image>
                    </ImageView>
                    <Label id="menu" text="Global Chat" />
                </children>
            </HBox>
            <VBox.margin>
                <Insets left="80.0" right="150.0" />
            </VBox.margin>
        </VBox>
        <Button id="button" mnemonicParsing="false" onMouseClicked="#logout" text="Logout" />
        <padding>
            <Insets bottom="10.0" left="35.0" right="35.0" top="30.0" />
        </padding>
    </VBox>
    <VBox fx:id="notificationMainVBox" layoutX="560.0" layoutY="300.0" prefHeight="99.0" prefWidth="364.0" styleClass="notificationMainVBox">
        <children>
            <Pane prefHeight="114.0" prefWidth="364.0">
