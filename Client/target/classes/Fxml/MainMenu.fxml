                </ImageView>
                <Button id="button2" layoutX="217.0" layoutY="57.0" mnemonicParsing="false" onMouseClicked="#acceptInvitation" prefHeight="28.0" prefWidth="66.0" text="accept">
                    <VBox.margin>
                        <Insets left="250.0" top="40.0" />
                    </VBox.margin>
                </Button>
                <Button id="button2" layoutX="291.0" layoutY="57.0" mnemonicParsing="false" onMouseClicked="#rejectInvitation" text="reject">
                    <VBox.margin>
                        <Insets left="230.0" top="40.0" />
                    </VBox.margin>
                </Button>
            <Label fx:id="notificationMessage" layoutX="8.0" layoutY="8.0" prefHeight="27.0" prefWidth="320.0" text="text" textFill="#faf5f5"/>
            </Pane>
        </children>
    </VBox>


