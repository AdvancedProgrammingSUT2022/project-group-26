<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<Pane prefHeight="800.0" prefWidth="1530" styleClass="secondPane" stylesheets="@../CSS/Menu.css"
      xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.project.views.GlobalChatMenu">
    <VBox id="firstBox" alignment="CENTER" layoutX="82.0" layoutY="31.0" prefHeight="800.0" prefWidth="750.0"
          spacing="10.0">
        <HBox alignment="CENTER_LEFT">
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#back"
                    prefHeight="38.0" prefWidth="48.0" style="-fx-background-color: #00062b" textAlignment="CENTER">
                <HBox.margin>
                    <Insets right="30.0"/>
                </HBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <graphic>
                    <ImageView fitHeight="50.0" fitWidth="45.0" onMouseClicked="#back" pickOnBounds="true"
                               preserveRatio="true">
                        <Image url="@../Image/Menu/Icon/back.png"/>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </ImageView>
                </graphic>
            </Button>
            <HBox id="menuBar" alignment="CENTER" prefHeight="62.0" prefWidth="439.0" spacing="10.0">
                <ImageView id="icon" fitWidth="35" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../Image/Menu/menuIcon.png"/>
                </ImageView>
                <Label id="menuTitle" text="Global Chat">
                    <font>
                        <Font size="34.0"/>
                    </font>
                </Label>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="5.0" top="10.0"/>
                </padding>
                <VBox.margin>
                    <Insets left="125.0" right="125.0"/>
                </VBox.margin>
            </HBox>
            <ImageView fitHeight="47.0" fitWidth="43.0" onMouseClicked="#openRightVBox" pickOnBounds="true"
                       preserveRatio="true" >
                <HBox.margin>
                    <Insets left="35.0"/>
                </HBox.margin>
                <Image url="@../Image/Menu/Icon/chat.png"/>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </ImageView>
        </HBox>
        <VBox fx:id="mainVBox" prefHeight="780.0" prefWidth="307.0">
            <children>
                <HBox fx:id="searchPanel" prefHeight="50.0" prefWidth="650.0" spacing="20.0">
                    <children>
                        <TextField fx:id="searchTextField" prefHeight="46.0" prefWidth="550.0">
                            <HBox.margin>
                                <Insets left="20.0" top="2.0"/>
                            </HBox.margin>
                        </TextField>
                        <ImageView fx:id="searchButton" fitHeight="41.0" fitWidth="38.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <Image url="@../Image/Menu/Icon/search.png"/>
                            <HBox.margin>
                                <Insets bottom="5.0" top="5.0"/>
                            </HBox.margin>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </ImageView>
                    </children>
                </HBox>
                <ScrollPane fx:id="suggestionScrollPane" hbarPolicy="NEVER" prefHeight="1000.0" prefWidth="650.0"
                            vbarPolicy="NEVER">
                    <content>
                        <VBox fx:id="suggestionVBox" prefWidth="650.0" spacing="5" styleClass="globalChatVbox"/>
                    </content>
                </ScrollPane>
                <HBox fx:id="dataOfChatHBox" prefHeight="64.0" prefWidth="650.0">
                    <children>
                        <Pane prefHeight="70.0" prefWidth="650.0">
                            <children>
                                <Label fx:id="labelOfDataChat" alignment="CENTER" contentDisplay="CENTER"
                                       layoutX="185.0" layoutY="5.0" prefHeight="38.0" prefWidth="271.0" text="name"
                                       textFill="YELLOW">
                                    <font>
                                        <Font size="26.0"/>
                                    </font>
                                </Label>
                                <ImageView fitHeight="38.0" fitWidth="43.0" layoutX="14.0" layoutY="5.0"
                                           onMouseClicked="#backFromChat" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@../Image/Menu/Icon/chatBack.png"/>
                                    <cursor>
                                        <Cursor fx:constant="HAND"/>
                                    </cursor>
                                </ImageView>
                                <ImageView fx:id="photoOfChat" fitHeight="46.0" fitWidth="53.0" layoutX="583.0"
                                           layoutY="1.0" pickOnBounds="true" preserveRatio="true"/>
                            </children>
                        </Pane>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </HBox>
                <HBox fx:id="beforeScrollPaneHBox" prefHeight="700.0" prefWidth="650.0">
                    <children>
                        <ScrollPane fx:id="scrollPane" prefHeight="700.0" prefWidth="667.0">
                            <content>
                                <VBox fx:id="allMessages" prefWidth="332.0" styleClass="globalChatVbox"/>
                            </content>
                        </ScrollPane>
                    </children>
                </HBox>
            </children>
        </VBox>
        <HBox prefHeight="61.0" prefWidth="650.0">
            <children>
                <TextField fx:id="textToSend" onKeyReleased="#enter" prefHeight="50.0" prefWidth="578.0">
                    <HBox.margin>
                        <Insets bottom="2.0" left="25.0" top="2.0"/>
                    </HBox.margin>
                </TextField>
                <ImageView fx:id="sendMessageIcon" fitHeight="32.0" fitWidth="38.0" onMouseClicked="#send"
                           pickOnBounds="true" preserveRatio="true">
                    <Image url="@../Image/Menu/Icon/send.png"/>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" top="7.0"/>
                    </HBox.margin>
                </ImageView>
            </children>
        </HBox>
        <padding>
            <Insets bottom="25.0" left="50.0" right="50.0" top="25.0"/>
        </padding>
    </VBox>
    <VBox fx:id="deleteMessage" layoutX="959.0" layoutY="286.0" prefHeight="98.0" prefWidth="183.0" visible="false">
        <children>
            <Pane prefHeight="103.0" prefWidth="183.0">
                <children>
                    <Button fx:id="deleteForEveryone" layoutX="30.0" layoutY="14.0" mnemonicParsing="false"
                            prefHeight="31.0" prefWidth="123.0" text="Delete for everyone" textFill="#00062b">
                        <font>
                            <Font name="System Bold" size="11.0"/>
                        </font>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                    <Button fx:id="deleteForMe" layoutX="40.0" layoutY="53.0" mnemonicParsing="false" prefHeight="31.0"
                            prefWidth="104.0" text="Delete for me" textFill="#00062b">
                        <font>
                            <Font name="System Bold" size="11.0"/>
                        </font>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                </children>
            </Pane>
        </children>
    </VBox>
    <VBox fx:id="editMessage" layoutX="977.0" layoutY="418.0" prefHeight="97.0" prefWidth="202.0" visible="false">
        <children>
            <Pane prefHeight="200.0" prefWidth="200.0">
                <children>
                    <TextField fx:id="editTextField" layoutX="16.0" layoutY="14.0" prefHeight="31.0" prefWidth="170.0"
                               styleClass="changeTextField"/>
                    <Button fx:id="changeMessageButton" layoutX="70.0" layoutY="57.0" mnemonicParsing="false"
                            text="change" textFill="#00062b">
                        <font>
                            <Font name="System Bold" size="13.0"/>
                        </font>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                </children>
            </Pane>
        </children>
    </VBox>
    <VBox fx:id="rightBarVBox" layoutX="832.0" layoutY="33.0" prefHeight="800.0" prefWidth="76.0" spacing="20.0">
        <children>
            <Pane prefHeight="802.0" prefWidth="76.0">
                <children>
                    <Button fx:id="changeToPublicChatButton" layoutX="-87.0" layoutY="123.0" mnemonicParsing="false"
                            onMouseClicked="#changeToPublic" prefHeight="32.0" prefWidth="250.0" rotate="90.0"
                            text="public chat">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                    <Button fx:id="changeToPrivateChatButton" layoutX="-87.0" layoutY="384.0" mnemonicParsing="false"
                            onMouseClicked="#changeToPrivate" prefHeight="32.0" prefWidth="250.0" rotate="90.0"
                            text="private chat">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                    <Button fx:id="changeToRoomChatButton" layoutX="-87.0" layoutY="646.0" mnemonicParsing="false"
                            onMouseClicked="#changeToRoom" prefHeight="32.0" prefWidth="250.0" rotate="90.0"
                            text="rooms">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                        <cursor>
                            <Cursor fx:constant="HAND"/>
                        </cursor>
                    </Button>
                </children>
            </Pane>
        </children>
    </VBox>
</Pane>
