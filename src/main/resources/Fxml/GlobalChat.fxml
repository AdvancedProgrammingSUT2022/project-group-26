<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane prefHeight="800.0" prefWidth="1530" style="-fx-background-color: #ff6a00" styleClass="secondPane" stylesheets="@../CSS/Menu.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.views.GlobalChatMenu">
    <HBox alignment="CENTER" prefHeight="97.0" prefWidth="1530.0">
        <Pane prefHeight="98.0" prefWidth="1739.0">
            <ImageView fitHeight="50.0" fitWidth="45.0" layoutX="34.0" layoutY="28.0" onMouseClicked="#back" pickOnBounds="true" preserveRatio="true">
                <Image url="@../Image/Menu/Icon/back.png" />
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </ImageView>
            <Label alignment="CENTER" layoutX="659.0" layoutY="31.0" prefHeight="18.0" prefWidth="213.0" text="Global Chat">
                <font>
                    <Font name="High Tower Text" size="32.0" />
                </font>
            </Label>
        </Pane>
    </HBox>
    <VBox layoutX="111.0" layoutY="110.0" prefHeight="635.0" prefWidth="666.0">
        <children>
            <ScrollPane fx:id="scrollPane" prefHeight="644.0" prefWidth="666.0">
                <content>
                    <VBox fx:id="allMessages" prefWidth="332.0" styleClass="globalChatVbox" />
                </content>
            </ScrollPane>
        </children>
    </VBox>
    <TextField fx:id="textToSend" layoutX="132.0" layoutY="745.0" onKeyReleased="#enter" prefHeight="39.0" prefWidth="564.0" />
    <ImageView fitHeight="32.0" fitWidth="38.0" layoutX="707.0" layoutY="749.0" onMouseClicked="#send" pickOnBounds="true" preserveRatio="true">
        <Image url="@../Image/Menu/Icon/send.png" />
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </ImageView>
    <VBox fx:id="deleteMessage" layoutX="959.0" layoutY="286.0" prefHeight="98.0" prefWidth="183.0" visible="false">
        <children>
            <Pane prefHeight="103.0" prefWidth="183.0">
                <children>
                    <Button fx:id="deleteForEveryone" layoutX="30.0" layoutY="14.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="123.0" text="Delete for everyone" textFill="#00062b">
                        <font>
                            <Font name="System Bold" size="11.0" />
                        </font>
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                    <Button fx:id="deleteForMe" layoutX="40.0" layoutY="53.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="104.0" text="Delete for me" textFill="#00062b">
                        <font>
                            <Font name="System Bold" size="11.0" />
                        </font>
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                </children>
            </Pane>
        </children>
    </VBox>
   <VBox fx:id="editMessage" layoutX="977.0" layoutY="418.0" prefHeight="97.0" prefWidth="202.0" visible="false">
      <children>
         <Pane prefHeight="200.0" prefWidth="200.0">
            <children>
               <TextField fx:id="editTextField" layoutX="16.0" layoutY="14.0" prefHeight="31.0" prefWidth="170.0" styleClass="changeTextField" />
               <Button fx:id="changeMessageButton" layoutX="70.0" layoutY="57.0" mnemonicParsing="false" text="change" textFill="#00062b">
                  <font>
                     <Font name="System Bold" size="13.0" />
                  </font>
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor></Button>
            </children>
         </Pane>
      </children></VBox>
</Pane>
