<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<Pane id="secondPane" prefHeight="800.0" prefWidth="1530.0" stylesheets="@../CSS/Menu.css"
      xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.project.views.EndGamePage">
    <Pane id="firstBox" layoutX="108.0" layoutY="110.0" prefHeight="629.0" prefWidth="550.0">
        <HBox fillHeight="false" layoutX="8.0" layoutY="11.0" prefHeight="100.0" prefWidth="479.0">
            <ImageView fitHeight="50.0" fitWidth="45.0" onMouseClicked="#back" pickOnBounds="true" preserveRatio="true">
                <Image url="@../Image/Menu/Icon/back.png"/>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <HBox.margin>
                    <Insets left="10.0" top="4.0"/>
                </HBox.margin>
            </ImageView>
            <ImageView fitHeight="137.0" fitWidth="368.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="NEVER">
                <Image url="@../Image/Menu/civLogo.png"/>
                <HBox.margin>
                    <Insets bottom="18.0" left="28.0" right="20.0" top="59.0"/>
                </HBox.margin>
            </ImageView>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </HBox>
        <ImageView fitHeight="251.0" fitWidth="224.0" layoutX="162.0" layoutY="188.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../Image/Game/endGame/ribbon.png"/>
            </image>
        </ImageView>
        <ImageView fitHeight="149.0" fitWidth="190.0" layoutX="180.0" layoutY="232.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../Image/Game/endGame/victory.png"/>
            </image>
        </ImageView>
        <HBox layoutX="114.0" layoutY="482.0" prefHeight="56.0" prefWidth="322.0" styleClass="endGameHBoxScore">
            <children>
                <Label alignment="CENTER" prefHeight="70.0" prefWidth="166.0" text="ilya" textFill="#ffd500" fx:id="name">
                    <font>
                        <Font size="36.0"/>
                    </font>
                </Label>
                <Label alignment="CENTER" prefHeight="76.0" prefWidth="170.0" text="50" textFill="#ffd500" fx:id="score">
                    <font>
                        <Font size="36.0"/>
                    </font>
                </Label>
            </children>
        </HBox>

        <padding>
            <Insets left="35.0" right="35.0" top="10.0"/>
        </padding>
    </Pane>
    <ImageView fitHeight="56.0" fitWidth="56.0" layoutX="20.0" layoutY="20.0" onMouseClicked="#exit" pickOnBounds="true"
               preserveRatio="true">
        <Image url="@../Image/Menu/close.png"/>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </ImageView>

</Pane>
